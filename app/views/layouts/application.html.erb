<!DOCTYPE html>
<html>
    <head>
        <title>RailsMasterApp</title>
        <%= csrf_meta_tags %>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    </head>

    <!-- ======= ======= ======= body ======= ======= ======= -->
    <body>

        <!-- == header == -->
        <div id="header">
            <h1> Rails Master App 4000 </h1>
            <%= favicon_link_tag 'favicon.ico' %>
            <div>
                <%= render :partial => '/users/menu' %>
                <%= render :partial => '/users/submenu' %>
            </div>
        </div>

        <!-- == yield == -->
        <div id="yield" class="section">
            <%= yield %>
        </div>

        <!-- == content == -->
        <div id="content" class="section">
            <%= link_to 'Toggle State', "/toggle_tags/1_3", remote: true %>
            <div id="targetEl" data-state="prev">
                <p>data-state initialized to: prev</p>
            </div>
        </div>

        <!-- == footer == -->
        <div id="footer" class="section">
            <h4> blog_dev </h4>
            <% if alert %>
                <p class="alert alert-danger"><%= alert %></p>
            <% end %>
        </div>
    </body>
</html>
