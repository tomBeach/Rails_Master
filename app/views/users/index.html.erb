<h1>Users</h1>

<% @users.each_with_index do |user, index| %>
    <% user_post = @postsArray[index].first %>
    <% puts " ** user_post.inspect: #{user_post.inspect}" %>
    <div class="user-box">
        <div class="title-box">
            <div class="name-link">
                <%= link_to user.fname + " " + user.lname, user %>
            </div>
            <div class="post-title">
                <% if user_post != "n" %>
                    <%= user_post.title %>
                <% else %>
                    <p class="empty-text">no posts for this user</p>
                <% end %>
            </div>
            <div class="user-links">
                <%= link_to "Edit", edit_user_path(user), class: "mini-link" %>
                <%= link_to 'Delete', user, class: "mini-link", method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
        </div>
        <div class="post-content">
            <% if user_post != "n" %>
                <%= user_post.content %>
            <% end %>
        </div>
    </div>
<% end %>

<br>

