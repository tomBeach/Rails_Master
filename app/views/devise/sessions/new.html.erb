<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div id="user-data">
        <div class="data">
            <div class="data-label"><%= label(:email, "email") %></div>
            <div class="data-value"><%= f.email_field :email, autofocus: true %></div>
        </div>
        <div class="data">
            <div class="data-label"><%= label(:password, "password") %></div>
            <div class="data-value"><%= f.password_field :password, autocomplete: "off" %></div>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class="data">
                <div class="data-label"><%= f.label :remember_me %></div>
                <div class="data-value"><%= f.check_box :remember_me %></div>
            </div>
        <% end -%>
        <div class="data">
            <div class="data-label">&nbsp;</div>
            <div class="data-value"><%= f.submit "Log in" %></div>
        </div>
    </div>

    <%= render "devise/shared/links" %>
<% end %>
